<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="0"
            android:layout_span="1"
            android:background="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_one"
            android:textColor="@color/light_teal"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="0"
            android:layout_span="1"
            android:background="@color/dark_teal"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_two"
            android:textColor="@color/light_teal"
            android:textSize="40sp" />

        <TextView
            android:layout_column="0"
            android:layout_span="1"
            android:background="@color/darker_purple"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_three"
            android:textColor="@color/light_teal"
            android:textSize="40sp" />

        <TextView
            android:layout_column="2"
            android:layout_span="1"
            android:background="@color/light_orange"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_four"
            android:textColor="@color/gray"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="1"
            android:layout_span="1"
            android:background="@color/hard_pink"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_five"
            android:textColor="@color/light_teal"
            android:textSize="40sp" />

        <TextView
            android:layout_column="0"
            android:layout_span="1"
            android:background="@color/teal"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/test_six"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </TableRow>
</TableLayout>
